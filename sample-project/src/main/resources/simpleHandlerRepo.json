{
  "plugins": [
    {
      "name": "AddTwoNumber",
      "className": "io.github.manhnt217.task.sample.example_plugin.AddTwoNumber"
    }
  ],
  "sources": [
    {
      "name": "Timer",
      "pluginClassName": "io.github.manhnt217.task.sample.event.TimerEventSource",
      "propsJSLT": ".timerInterval",
      "autoStart": true,
      "async": false
    },
    {
      "name": "HttpServer",
      "pluginClassName": "io.github.manhnt217.task.plugin.source.http.HttpEventSource",
      "propsJSLT": "{\"host\": \"0.0.0.0\", \"port\": 28080}",
      "autoStart": true,
      "async": false
    }
  ],
  "handlers": [
    {
      "name": "h1",
      "outputMapping": "\"Hello, is there anybody in there?\"",
      "eventClass": "java.lang.String",
      "outputClass": "java.lang.String",
      "fromSourceActivity": {
        "name": "FromTimer",
        "type": "SOURCE",
        "sourceName": "Timer"
      },
      "group": {
        "activities": [
          {
            "name": "Add",
            "type": "PLUGIN",
            "inputMapping": "{\"a\": .FromTimer, \"b\": 10}",
            "pluginName": "AddTwoNumber"
          }
        ],
        "links": [
          {
            "from": "FromTimer",
            "to": "Add"
          },
          {
            "from": "Add",
            "to": "END"
          }
        ]
      }
    },
    {
      "name": "http-handler",
      "outputMapping": "{\"body\":string({\"message\": \"Hello \" + .json.name}),\"contentType\": \"application/json\"}",
      "eventClass": "io.github.manhnt217.task.plugin.source.http.HttpEventSourceRequest",
      "outputClass": "io.github.manhnt217.task.plugin.source.http.HttpEventsourceResponse",
      "fromSourceActivity": {
        "name": "FromRequest",
        "type": "SOURCE",
        "sourceName": "HttpServer"
      },
      "group": {
        "activities": [
          {
            "name": "json",
            "type": "JSON_PARSER",
            "inputMapping": ".FromRequest.body"
          }
        ],
        "links": [
          {
            "from": "FromRequest",
            "to": "json"
          },
          {
            "from": "json",
            "to": "END"
          }
        ]
      }
    }
  ]
}